<h1><%= @player.name %></h1>

<p id="notice"><%= notice %></p>

<% if @player.image_url %>
 <%= image_tag @player.image_url, width: '80%', alt: 'your photo' %>
<% end %>
<h2>Top Score: <% @player.top_score %></h2>
<br>
<h2>Characteristics</h2>
<ul>
  <% @player.characteristics.each do |ch| %>
    <li><%= ch.characteristic_name %></li>
  <% end %>
</ul>

<a class="btn btn-primary" href="<%=edit_player_path%>" role="button">Edit Profile</a>
<a class="btn btn-primary" href="<%=start_game_path%>" role="button">Start a new game</a>
